<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN"
    "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>

	<bean id="triangle" class="edu.deepak._07_ObjectInjection.Triangle">
		<property name="pointA" ref="pointZero" />
		<property name="pointB" ref="point1" />
		<property name="pointC" ref="point2" />
	</bean>

	<bean id="pointZero" class="edu.deepak._07_ObjectInjection.Point">
		<property name="x" value="0" />
		<property name="y" value="0" />
	</bean>

	<bean id="point1" class="edu.deepak._07_ObjectInjection.Point">
		<property name="x" value="10" />
		<property name="y" value="0" />
	</bean>

	<bean id="point2" class="edu.deepak._07_ObjectInjection.Point">
		<property name="x" value="0" />
		<property name="y" value="10" />
	</bean>


</beans>